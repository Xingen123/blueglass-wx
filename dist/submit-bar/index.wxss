@import '../common/index.wxss';

.van-submit-bar {
  z-index: 100;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  -webkit-user-select: none;
  user-select: none;
}

.van-submit-bar__tip {
  padding: 10px;
  color: #9b9b9b;
  font-size: 12px;
  line-height: 18px;
  background-color: #f4f4f4;
}

.van-submit-bar__bar {
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  height: 50px;
  background-color: #fff;
  font-size: 14px;
}

.van-submit-bar__text {
  -webkit-flex: 1;
  flex: 1;
  color: #333;
  font-weight: 500;
  text-align: right;
}

.van-submit-bar__price {
  padding-right: 12px;
  color: #f44;
}

.van-submit-bar__button button {
  width: 110px;
  /* background: #01A0EB; */
  background: linear-gradient(to right, #01a0eb, #02cef7);
  border: none;
}
.huise{
  color: #9B9B9B;
  font-size: 12px;
}
.freight{
  margin-left: 10px;
}
