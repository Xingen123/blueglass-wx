@import '../common/index.wxss';
.blue-card{
  box-shadow: 0px 2px 20px 0 #cccccc;
  background: #fff;
  width:calc(100% - 30px);
  border: 1px solid #dcdcdc;
  margin: 10px auto;
  border-radius: 6px;
}
.blue-card__title{
  padding: 10px 15px 0px 10px;
  font-size: 16px;
}
.van-card {
  box-sizing: border-box;
  position: relative;
  /* height: 100px; */
  color: #4a4a4a;
  font-size: 12px;
  padding: 9px 15px 10px 115px;
  
}

.van-card--center {
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.blue-card__content{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.van-card__thumb {
  position: absolute;
  top: 5px;
  left: 15px;
  width: 90px;
  height: 90px;
}

.van-card__img {
  width: 100%;
  height: 100%;
}

.van-card, .van-card__content {
  display: -webkit-flex;
  display: flex;
}

.van-card__content {
  width: 100%;
}

.van-card__desc, .van-card__title {
  line-height: 20px;
  word-break: break-all;
}

.van-card__title {
  max-height: 40px;
    font-size: 15px;
  font-weight: bold;
  color: #000;
}

.van-card__desc {
  max-height: 20px;
  color: #9b9b9b;
   font-size: 12px;
}
.van-card__detail{
  color: #4a4a4a;
   font-size: 12px;
}
.van-card__left {
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.van-card__right {
  -webkit-flex: none;
  flex: none;
  padding-left: 10px;
  line-height: 20px;
  text-align: right;
}

.van-card__origin-price {
  color: #666;
  text-decoration: line-through;
}

.van-card__num {
  color: #4a4a4a;
  font-size: 16px;
  }

.van-card__tag {
  position: absolute;
  top: 2px;
  left: 0;
}

.van-card__footer {
  position: absolute;
  right: 15px;
  bottom: 5px;
}

.van-card__footer .van-button {
  margin-left: 5px;
}

.blue-card__price {
  font-size: 19px;
  color: #f14d5c;
}
