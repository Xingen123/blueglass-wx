.addpro {
  margin: 30rpx;
}

.addpro_title {
  font-size: 30rpx;
  color: #4a4a4a;
}

.addpro_input {
  width: calc(100% - 20rpx);
  background: #f6f6f6;
  border-radius: 12rpx;
  height: 88rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
}

.addpro_fd {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 23rpx;
}

.addpro_fd_title {
  font-size: 30rpx;
  color: #4a4a4a;
}

.addpro_fd image {
  height: 34rpx;
  width: 34rpx;
}

.box-shoaw {
  background: #fff;
  box-shadow: 0 4px 40px 0 rgba(204, 204, 204, 0.50);
  border-radius: 12rpx;
}
.addpro_fdcon{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 307rpx;
  height: 280rpx;
  margin-top: 30rpx;
}
.addpro_fd_img{
  width: 82rpx;
  height: 98rpx;
}
.addpro_fd_desc{
  font-size: 26rpx;
color: #4A4A4A;
}

.submit{
  width: 100%;
  position: fixed !important;
  bottom: 0;
  color: #01A0EB;
}