/* pages/MePage/browseRecords.wxss */

.browserecord_container {
  display: flex;
  flex-direction: column;
  position: relative;
}

.cell_view {
  display: flex;
  flex-direction: row;
}

.left_view {
  width: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.noShop{
  width: 100%;
  font-size: 28rpx;
color: #4A4A4A;
 position: absolute;
 top: 350rpx;
 text-align: center;
}

.left_image {
  background-color: #d8d8d8;
  width: 38rpx;
  height: 38rpx;
  border-radius: 19rpx;
  margin-top: 11rpx;
}

.cell_view:first-child .left_image{
  background-color: #01a0eb;
}

.left_line_view {
  width: 3rpx;
  background: #d8d8d8;
  height: calc(100% - 50rpx);
}

.date {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000;
}

.inner_view {
  margin-top: 20rpx;
  background: #fff;
  box-shadow: 0 4px 40px 0 rgba(215, 215, 215, 0.50);
  border-radius: 12rpx;
}

.inner_cell_view {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  width: 634rpx;
  align-items: center;
}

.head_image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 26rpx;
  border-radius: 32rpx;
}

.name_view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 26rpx;
  width: 75%;
}

.fruit_view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 116rpx;
  padding-bottom: 20rpx;
  width: 75%;
}

.shop_name {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000;
}

.level_name {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9b9b9b;
}

.right_text_view {
  border: 1px solid #01a0eb;
  width: 110rpx;
  height: 40rpx;
  border-radius: 21px;
  align-items: center;
  display: flex;
  justify-content: center;
  /* position: fixed;
  right: 52rpx; */
}

.right_text {
  font-size: 24rpx;
  color: #01a0eb;
}
