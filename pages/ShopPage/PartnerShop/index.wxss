/* pages/ShopPage/PartnerShop/idnex.wxss */

.content {
  margin: 20px;
}

.sologn {
  text-align: center;
  font-size: 12px;
  color: #4a4a4a;
}

.shop {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.shop_right {
  display: flex;
  align-items: center;
  border-radius: 0 50rpx 50rpx 0;
  height: 70rpx;
  background: #fff;
  padding:0 50rpx;
  /* margin-left: -50rpx; */
  /* z-index: -1; */
}

.shop image {
  height: 60px;
  width: 60px;
  border-radius: 50%;
}

.shop_name {
  font-size: 12px;
  color: #01a0eb;
  margin-left: 10px;
}

.shop_dj {
  font-size: 12px;
  color: #9b9b9b;
  margin-left: 20px;
}

.shop_sale {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius:50rpx;
  height: 70rpx;
  background: #fff;
  width: 60%;
  margin: 0 auto;
  text-align: center;
}

.shop_sale_ymc {
  font-size: 12px;
  color: #9b9b9b;
}

.shop_sale_ymc span {
  font-size: 14px;
  color: #01a0eb;
  line-height: 33px;
}

.shop_sale_jl {
  font-size: 12px;
  color: #01a0eb;
  border: 1px solid #01a0eb;
  border-radius: 10px;
  padding: 0px 16px;
  margin-left: 20px;
  margin-top: 0px;
}

.circle {
  background-image: linear-gradient(-270deg, #02cef7 0%, #01a0eb 100%);
  box-shadow: 0 4px 33px 0 #c0ebff;
  position: fixed;
  bottom: 100px;
  font-size: 13px;
  color: #fff;
  border-radius: 50%;
  text-align: center;
}

.yqhy {
  left: 20px;
  height: 45px;
  width: 45px;
  line-height: 45px;
}

.qdd {
  right: 20px;
  height: 54px;
  width: 54px;
  line-height: 54px;
}
