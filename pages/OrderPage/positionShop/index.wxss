/* pages/OrderPage/positionShop/index.wxss */

.map_container {
  height: 860rpx;
  width: 100%;
  z-index: 0;
}

.map {
  height: 100%;
  width: 100%;
}

.place_info {
  z-index: 9999;
  position: fixed;
  bottom: 0;
  height: 344rpx;
  box-shadow: 0 0px 40px 0 rgba(204, 204, 204, 0.50);
  border-radius: 12rpx 12rpx 0 0;
  width: calc(100% - 60rpx);
  margin: 0 auto;
  padding: 0 30rpx;
  background: #fff;
}

.position {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}

.position_l {
  font-size: 32rpx;
  color: #9b9b9b;
  display: flex;
  align-items: center;
}

.position_l image {
  height: 26rpx;
  width: 29rpx;
  margin-left: 10rpx;
}

.position_r {
  font-size: 28rpx;
  color: #4a4a4a;
  display: flex;
  align-items: center;
}

.position_r image {
  height: 26rpx;
  width: 26rpx;
  margin-right: 10rpx;
}

.position_name {
  box-shadow: 0 4px 40px 0 rgba(204, 204, 204, 0.50);
  padding: 0 30rpx;
  border-radius: 12rpx;
  width: calc(100% - 60rpx);
  min-height: 92rpx;
  /* line-height: 92rpx; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
}
.position_img{
  height: 32rpx;
  width: 26rpx;
}
.position_img2{
  height: 31rpx;
  width: 31rpx;
}
