/* pages/OrderPage/DispatchingOrderDetail/DispatchingOrderDetail.wxss */

.cover_view {
  width: 100%;
  height: 344rpx;
  position: fixed;
  bottom: 0;
  background-color: rgba(247, 247, 247, 1.0);
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 24rpx 0;
}

.top_view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 114rpx;
  align-content: center;
  justify-content: space-between;
}

.left_view {
  margin-left: 27rpx;
  height: 114rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.right_view {
  margin-right: 33rpx;
  height: 114rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.shopname {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #9b9b9b;
}

.icon {
  margin-left: 12rpx;
  width: 29rpx;
  height: 26rpx;
  margin-right: 12rpx;
}

.mid_view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 114rpx;
}

.bottom_view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 114rpx;
}

.mid_border_view{
  display: flex;
  margin-left: 29rpx;
  height: 92rpx;
  width: calc(100% - 58rpx);
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  border-radius: 9rpx
}

.addressname {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000;
  margin-left: 30rpx;
}

.bottom_icon {
  width: 26rpx;
  height: 32rpx;
  margin-right: 30rpx;
}
