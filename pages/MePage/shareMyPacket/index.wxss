/* pages/MePage/shareMyPacket/index.wxss */
.box{
    padding-bottom: 100rpx;
}
.shareHistory{
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    color: #9B9B9B;
    padding: 27rpx ;
    font-weight:400;
}
.packet{
    width:698rpx;
    height:408rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 5rpx 20rpx 0px rgba(215,215,215,0.5);
    border-radius:12rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    text-align: center;
}
.shareParekt{
position:fixed;
right:20px;
height:115rpx;
width:115rpx;
bottom:100rpx;

}
.shareParekt image{
width: 100%;
height: 100%;
}
.packet text{
    height:56rpx;
    display: block;
    margin: 0 auto;
    font-size:40rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:rgba(0,0,0,1);
   padding-top: 40rpx;
}
.packet view{
    font-size:24rpx;
    line-height:33rpx;
}
.packet image{
    display: block;
    margin: 0 auto;
    margin-top: 40rpx;
    width: 613rpx;
    height: 2rpx;
    
}
.packet view:nth-child(3){
    margin-top: 30rpx;
    width:613rpx;
    text-align: center;
    margin: 0 auto;
    margin-top: 30rpx;
}
.packet view:nth-child(4){
    margin-top: 15rpx;
    color:rgba(155,155,155,1);
}
.packet button{
    width:372rpx;
height:66rpx;
margin-top: 42rpx;
border-radius:33rpx;
color: #00A0E8;
font-size:24rpx;
line-height: 66rpx;
background-color:white;
border:2rpx solid rgba(0,160,232,1);
}
