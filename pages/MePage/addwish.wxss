/* pages/MePage/addwish.wxss */

.editcontainer {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.inputview {
  margin-top: 10rpx;
  margin-left: 28rpx;
  width: calc(100% - 56rpx);
  height: 88rpx;
  background: #f6f6f6;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
}

.input-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #9b9b9b;
}

.inputtext-code {
  margin-left: 28rpx;
  width: calc(100% - 56rpx - 180rpx);
  height: 88rpx;
}

.inputtext {
  margin-left: 28rpx;
  width: calc(100% - 56rpx);
  height: 88rpx;
  font-size: 30rpx;
  display: flex;
  /* justify-content: space-around;
   */
  align-items: center;
}

.logoutview {
  background: #fff;
  box-shadow: 0 -7px 71px 0 rgba(234, 234, 234, 0.50);
  height: 100rpx;
  position: fixed;
  bottom: 0px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logouttext {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #01a0eb;
}

.bind-codeButton {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #fff;
  height: 100%;
  background: rgba(0, 0, 0, 0);
}

.buttonview {
  border-radius: 0, 12rpx, 0, 12rpx;
  background: #01a0eb;
}

.title {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000;
  margin-left: 40rpx;
  margin-top: 20rpx;
}

.addphoto {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #4a4a4a;
  margin-left: 40rpx;
  margin-top: 50rpx;
}

.main {
  float: left;
  width: 300rpx;
  height: 150rpx;
  margin: 1%;
  margin-left:30rpx;
  background-color: #fcfcfc;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
}

.main_img_ {
  width: 81rpx;
  height: 81rpx;
}

.main_img {
  width: 100%;
  height: 100%;
}

._logoutview {
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #fff;
  height: 87rpx;
  position: fixed;
  bottom: 0px;
  width: 100%;
  align-items: center;
}

.deletetext {
  height: 100%;
  width: 349rpx;
  background: #fff;
  box-shadow: 0 4px 40px 0 rgba(215, 215, 215, 0.50);
  border-radius: 44rpx;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #fc707d;
  margin-left: 20rpx;
  text-align: center;
  padding-top: 23rpx;
}

.surettext {
  height: 100%;
