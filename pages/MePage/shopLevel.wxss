.box-shoaw {
  box-shadow: 0 4px 40px 0 rgba(204, 204, 204, 0.50);
  border-radius: 12rpx;
  width: calc(100% - 120rpx);
  margin: 30rpx auto;
  padding: 30rpx;
}

.shop_level_blue {
  font-size: 40rpx;
  color: #000;
}

.shop_level_money {
  font-size: 26rpx;
  color: #4a4a4a;
  margin-left: 20rpx;
}

.shop_level_xs {
  font-size: 26rpx;
  color: #4a4a4a;
  margin-top: 20rpx;
}

.shop_level_xs_money {
  font-size: 28rpx;
  color: #000;
}

.shop_desc {
  border-top: 2rpx solid #dcdcdc;
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shop_desc_l {
  font-size: 24rpx;
  color: #4a4a4a;
}

.shop_desc_r {
  font-size: 24rpx;
  color: #9b9b9b;
}
.shop_tab{
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
}
.shop_tab_con{
  display: flex;
  flex-direction: column;
  width: 140rpx;
  text-align: center;
  align-items: center;
  justify-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.shop_tab_con image{
  height: 50rpx;
  width: 50rpx;
  text-align: center;
  margin-bottom: 16rpx;
}
.shop_tab_con text{
  font-size: 26rpx;
color: #4A4A4A;
text-align: center;
}
