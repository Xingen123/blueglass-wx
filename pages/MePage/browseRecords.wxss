/* pages/MePage/browseRecords.wxss */

.browserecord_container {
  display: flex;
  flex-direction: column;
}

.cell_view {
  display: flex;
  flex-direction: row;
}
.cell_view:first-child .left_image{
  background-color: #01a0eb;
}
.left_view {
  width: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.left_image {
  background-color: #dcdcdc;
  width: 38rpx;
  height: 38rpx;
  border-radius: 19rpx;
  margin-top: 11rpx;
}

.left_line_view {
  width: 3rpx;
  background: #d8d8d8;
  height: calc(100% - 50rpx);
}

.date {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000;
}

.inner_view{
  margin-top: 20rpx;
  position: relative;
}
.inner_cell_view {
  display: flex;
  flex-direction: row;
  height: 120rpx;
  width: 634rpx;
  background: #fff;
  box-shadow: 0 4px 40px 0 rgba(215, 215, 215, 0.50);
  border-radius: 12rpx;
  align-items: center;
}

.head_image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 26rpx;
  border-radius: 32rpx;
}

.name_view {
  display: flex;
  flex-direction: column;
  margin-left: 26rpx;
}

.shop_name {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000;
}

.level_name {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #9b9b9b;
}

.right_text_view {
  border: 1px solid #01a0eb;
  width: 110rpx;
  height: 40rpx;
  border-radius: 21px;
  align-items: center;
  display: flex;
  justify-content: center;
  position: absolute;
  right: 52rpx;
}

.right_text {
  font-size: 24rpx;
  color: #01a0eb;
}
